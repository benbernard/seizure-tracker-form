{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "all": false,
        "useAltText": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off",
        "useMediaCaption": "off",
        "useValidAriaProps": "off",
        "useValidLang": "off",
        "noHeaderScope": "off",
        "useIframeTitle": "off",
        "noRedundantAlt": "off",
        "useAnchorContent": "off",
        "noInteractiveElementToNoninteractiveRole": "off",
        "noNoninteractiveElementToInteractiveRole": "off",
        "useAriaPropsForRole": "off",
        "useHeadingContent": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "overrides": [
    {
      "include": [
        "./tsconfig.json"
      ],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  }
}